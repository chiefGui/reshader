{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "strict": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "src/*": ["src/*"]
    },
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
